{
  "name": "watch-later-console-script",
  "version": "1.0.0",
  "description": "Browser console script for Watch Later cleanup",
  "scripts": {
    "build": "webpack",
    "build:esbuild": "node esbuild.config.js",
    "watch": "webpack --watch",
    "dev": "webpack --mode development --watch",
    "deploy": "npx esbuild ./src/console-script.ts --bundle --outfile=dist/bundle.js --format=iife --global-name=WatchLaterCleaner --platform=browser --target=es2020 --minify"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "esbuild": "^0.19.12",
    "ts-loader": "^9.4.0",
    "typescript": "^5.9.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  }
}
